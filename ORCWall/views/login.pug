doctype html
html
  head
    title Login Form
    link(rel='stylesheet', href='/css/forms.css', type='text/css')
    link(rel='shortcut icon', type='image/png', href='/resources/Images/favicon.png')
    link(href='https://fonts.googleapis.com/css?family=Muli:400,600,700', rel='stylesheet')
  body
    .formwrapper
      form#idformwrapperauxiliar.formwrapperauxiliar(method='POST', action='/user/login')
        .formfield(style='width: 100%;')
          label.textform
            b E-MAIL
          input#emailinput.inputform(name='email', type='text', placeholder='Enter e-mail', required='')
        .formfield(style='width: 100%;')
          label.textform
            b PASSWORD
          input#password.inputform(name='password', type='password', placeholder='Enter password', required='')
        .buttonsdiv
          button#createaccountbutton.secbutton(type='button', onclick="location.href = '/user/register';") Create Account
          button#loginbutton.mainbutton(type='submit') Login
